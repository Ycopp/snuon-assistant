{
  "name": "SNUON Assistant",
  "short_name": "snuon",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "SNUON 단축키, 배속 재생 등",
  "homepage_url": "https://github.com/ylemkimon/snuon-assistant",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [ "activeTab", "storage" ],
  "options_page": "options.html",
  "browser_action": {
    "default_icon": {
      "19": "icons/icon19.png",
      "38": "icons/icon38.png",
      "48": "icons/icon48.png"
    },
    "default_popup": "popup.html"
  },
  "content_scripts": [{
      "matches": [
        "http://etl.snu.ac.kr/mod/vod/viewer.php*",
        "https://etl.snu.ac.kr/mod/vod/viewer.php*"
      ],
      "css": [ "inject.css" ],
      "js":  [ "inject.js" ]
    }
  ],
  "web_accessible_resources": [
    "inject.css", "shadow.css"
  ]
}
